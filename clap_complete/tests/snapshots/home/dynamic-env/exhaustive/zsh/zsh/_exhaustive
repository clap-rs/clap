#compdef exhaustive
function _clap_dynamic_completer_exhaustive() {
    local _CLAP_COMPLETE_INDEX=$(expr $CURRENT - 1)
    local _CLAP_IFS=$'\n'

    local completions=("${(@f)$( \
        _CLAP_IFS="$_CLAP_IFS" \
        _CLAP_COMPLETE_INDEX="$_CLAP_COMPLETE_INDEX" \
        COMPLETE="zsh" \
        exhaustive -- "${words[@]}" 2>/dev/null \
    )}")

    if [[ -n $completions ]]; then
        local -a nospace=()
        local -a other=()
        local completion
        for completion in $completions; do
            if [[ "$completion" == $'\x1f'* ]]; then
                completion="${completion:1}"
                nospace+=("$completion")
            else
                other+=("$completion")
            fi
        done
        [[ -n $nospace ]] && _describe 'values' nospace -S ''
        [[ -n $other ]] && _describe 'values' other
    fi
}

compdef _clap_dynamic_completer_exhaustive exhaustive
